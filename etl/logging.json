{
  "version": 1,
  "disable_existing_loggers": false,
  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "level": "DEBUG",
      "formatter": "standard"
    },
    "rss_prod": {
      "class": "logging.handlers.TimedRotatingFileHandler",
      "level": "INFO",
      "formatter": "standard",
      "filename": "logs/rss.log",
      "when": "D",
      "interval": 1,
      "atTime": "midnight"
    },
    "nyt_prod": {
      "class": "logging.FileHandler",
      "level": "INFO",
      "formatter": "standard",
      "filename": "logs/nyt.log"
    },
    "apscheduler.scheduler": {
      "class": "logging.FileHandler",
      "level": "INFO",
      "formatter": "standard",
      "filename": "logs/apscheduler.log"
    }
  },
  "formatters": {
    "standard": {
      "format": "[%(levelname)s] %(asctime)s | %(module)s | %(funcName)s | %(message)s"
    }
  },
  "loggers": {
    "etl.etl_utils": {
      "propagate": false,
      "handlers": ["console", "nyt_prod"]
    },
    "etl.execute_nyt_scraper": {
      "propagate": false,
      "handlers": ["console", "nyt_prod"]
    },
    "etl.rss_parser": {
      "propagate": false,
      "handlers": ["console", "rss_prod"]
    },
    "etl": {
      "propagate": false,
      "handlers": ["console"]
    },
    "etl.parsing_utils": {
      "propagate": false,
      "handlers": ["console", "rss_prod"]
    }
  },
  "root": {
    "handlers": ["console"],
    "level": "DEBUG"
  }
}